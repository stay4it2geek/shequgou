<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.-->
	<style name="AppBaseTheme" parent="Theme.AppCompat.Light">
	    <!-- Theme customizations available in newer API levels can go in
	    	res/values-vXX/styles.xml, while customization related to
	    	backward-compatibility can go here.-->
	</style>
	<style name="Theme.Soundplayer" parent="@android:style/Theme.Holo.Dialog.NoActionBar">
		<item name="android:windowCloseOnTouchOutside">false</item>
	</style>
	<!-- Application theme. -->
	<style name="AppTheme" parent="AppBaseTheme">
	    <!-- All customizations that are NOT specific to a particular API-level can go here. -->
	</style>

	<style name="CustomDialog" parent="android:style/Theme.Dialog">
		<!--背景颜色及和透明程度-->
		<item name="android:windowBackground">@android:color/transparent</item>
		<!--是否去除标题 -->
		<item name="android:windowNoTitle">true</item>
		<!--是否去除边框-->
		<item name="android:windowFrame">@null</item>
		<!--是否浮现在activity之上-->
		<item name="android:windowIsFloating">true</item>
		<!--是否模糊-->
		<item name="android:backgroundDimEnabled">true</item>
	</style>

	<style name="menu_labels_style">
		<item name="android:background">@color/blue</item>
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="Theme.Holo.Dialog.CustomNoActionBar" parent="Theme.AppCompat.Dialog">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="Small" parent="android:Widget.ProgressBar">
		<item name="android:layout_height">16dip</item>
		<item name="android:layout_width">16dip</item>
	</style>
	<style name="textStyle" parent="android:Widget.TextView">
		<item name="android:textSize">17dp</item>
		<item name="android:layout_marginLeft">15dp</item>
	</style>

	<style name="style_smile">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_gravity">center</item>
	</style>

	<style name="style_text" parent="style_smile">
		<item name="android:textSize">@dimen/text_size_medium</item>
	</style>

	<style name="style_text_small" parent="style_smile">
		<item name="android:textSize">@dimen/text_size_small</item>
	</style>

	<style name="style_text_middle" parent="style_smile">
		<item name="android:textSize">@dimen/text_size_medium</item>
	</style>

	<style name="style_text_large" parent="style_smile">
		<item name="android:textSize">@dimen/text_size_large</item>
	</style>

	<style name="style_text_black" parent="style_text">
		<item name="android:textColor">@color/black</item>
	</style>

	<style name="style_text_white" parent="style_text">
		<item name="android:textColor">@color/base_color_text_white</item>
	</style>

	<style name="style_text_gray_small" parent="style_text_small">
		<item name="android:textColor">@color/color_99</item>
	</style>

	<style name="style_text_white_small" parent="style_text_small">
		<item name="android:textColor">@color/base_color_text_white</item>
	</style>

	<style name="style_button">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/height_title</item>
	</style>

	<style name="style_button_logout" parent="style_text_black">
		<item name="android:background">@drawable/button_common_selector</item>
	</style>

	<style name="style_text_1e1e1e" parent="style_text">
		<item name="android:textColor">@color/color_1e1e1e</item>
	</style>

	<style name="chat_content_date_style">
		<item name="android:minHeight">50dp</item>
		<item name="android:gravity">left|center</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:textSize">15sp</item>
		<item name="android:lineSpacingExtra">2dp</item>
		<item name="android:clickable">true</item>
		<item name="android:focusable">true</item>
		<item name="android:background">#bfbfbf</item>
	</style>

	<style name="chat_text_name_style">
		<item name="android:textColor">#818181</item>
		<item name="android:textSize">15sp</item>
		<item name="android:gravity">center</item>
	</style>

</resources>
