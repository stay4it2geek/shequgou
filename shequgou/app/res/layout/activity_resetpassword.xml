<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.act.quzhibo.widget.TitleBarView
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/grayshape"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/commonViewHeight">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="25dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/phone" />

            <EditText
                android:id="@+id/et_userPhonenumber"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/imageView5"
                android:background="@null"
                android:ems="20"
                android:gravity="center_vertical"
                android:hint="手机号码"
                android:paddingLeft="10dp"
                android:textSize="15sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/commonViewHeight">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/password" />

            <EditText
                android:id="@+id/et_newpsw"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/imageView2"
                android:background="@null"
                android:ems="20"
                android:gravity="center_vertical"
                android:hint="新密码"
                android:paddingLeft="10dp"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/isSetPswVisiNew"
                android:layout_width="26dp"
                android:button="@null"
                android:background="@drawable/btn_visi_selector"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:checked="false" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/password" />

            <EditText
                android:id="@+id/et_c_newpsw"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/imageView3"
                android:background="@null"
                android:ems="20"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:hint="确认密码"
                android:paddingLeft="10dp" />

            <CheckBox
                android:id="@+id/isSetPswVisiConfirm"
                android:layout_width="26dp"
                android:button="@null"
                android:background="@drawable/btn_visi_selector"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:checked="false" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <EditText
            android:id="@+id/et_sms_code"
            android:layout_width="180dp"
            android:layout_height="@dimen/commonViewHeight"
            android:layout_marginLeft="15dp"
            android:background="@drawable/grayshape"
            android:maxLength="10"
            android:gravity="center_vertical"
            android:hint="请输入短信验证码"
            android:inputType="phone"
            android:paddingLeft="10dp"
            android:textSize="15sp" />

        <Button
            android:id="@+id/getCode_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/buttonheight"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/button_common_selector"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="-2dp"
            android:text="点击获取验证码 "
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_verify_resetPsw"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_common_selector"
        android:button="@null"
        android:gravity="center"
        android:text="确 认"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>
