<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eeeeee"
    android:orientation="vertical"
    android:scrollbars="none">


    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/layout"
        android:background="@drawable/bg_title_purpse"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:visibility="gone"
        tl:tl_indicator_color="@color/white"
        tl:tl_indicator_margin_left="2dp"
        tl:tl_indicator_margin_right="2dp"
        tl:tl_indicator_style="NORMAL"
        tl:tl_indicator_width="60dp"
        tl:tl_textSelectColor="@color/white"
        tl:tl_textUnselectColor="@color/darkgray"
        tl:tl_textsize="16sp" />

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/layout_mine"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:visibility="gone"
        android:background="@drawable/bg_title_purpse"
        tl:tl_indicator_color="@color/white"
        tl:tl_indicator_margin_left="2dp"
        tl:tl_indicator_margin_right="2dp"
        tl:tl_indicator_style="NORMAL"
        tl:tl_indicator_width="50dp"
        tl:tl_textSelectColor="@color/white"
        tl:tl_textUnselectColor="@color/darkgray"
        tl:tl_textsize="16sp">

    </com.flyco.tablayout.CommonTabLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>