<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.act.quzhibo.widget.TitleBarView
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <com.act.quzhibo.widget.ClipViewLayout
        android:id="@+id/clipViewLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/titleBarViewHeight"
        app:clipBorderWidth="2dp"
        app:clipType="circle"
        app:mHorizontalPadding="30dp" />


    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_gravity="bottom"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="80dp"
            android:layout_margin="5dp"
            android:layout_height="40dp"
            android:text="取消"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:background="@drawable/button_common_selector"
            android:textColor="#fff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/bt_ok"
            android:layout_width="80dp"
            android:layout_margin="5dp"
            android:layout_height="40dp"
            android:text="选取"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:background="@drawable/button_common_selector"
            android:textColor="#fff"
            android:textSize="16sp" />
    </RelativeLayout>


</FrameLayout>
